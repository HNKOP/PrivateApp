<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/status_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/status_cont">

        <GridView
            android:id="@+id/inventory_gridview"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:numColumns="5">

        </GridView>
        <TextView
            android:id="@+id/description_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/inventory_gridview"/>
        <RelativeLayout
            android:id="@+id/location_cont"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>