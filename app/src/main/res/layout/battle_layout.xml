<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/status_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/status_cont">


    <RelativeLayout
        android:id="@+id/relative_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:layout_weight="3">

        <ProgressBar
            android:id="@+id/progressBar_herohp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:progressDrawable="@drawable/progress_red"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_battlemenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_toRightOf="@id/relative_hero"
        android:layout_weight="4">
        <TextView
            android:id="@+id/textview_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp">
            <RadioButton
                android:id="@+id/radiobutton_defhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClick"/>
            <RadioButton
                android:id="@+id/radiobutton_defbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClick"/>
            <RadioButton
                android:id="@+id/radiobutton_deflegs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClick"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp">
            <RadioButton
                android:id="@+id/radiobutton_atkhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClick"/>
            <RadioButton
                android:id="@+id/radiobutton_atkbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClick"/>
            <RadioButton
                android:id="@+id/radiobutton_atklegs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClick"/>
        </RadioGroup>
        <ProgressBar
            android:id="@+id/progressBar_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/button_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="Do damage"
            android:onClick="onDoDamageClick"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_enemy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_toRightOf="@id/relative_battlemenu"
        android:background="#dddddd"
        android:layout_weight="3">

        <ProgressBar
            android:id="@+id/progressBar_enemyhp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:progressDrawable="@drawable/progress_red"/>
        <RelativeLayout
            android:id="@+id/location_cont"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>

 <ImageView
     android:id="@+id/arrow_view"
     android:layout_width="150dp"
     android:layout_height="75dp"
     android:src="@drawable/arrow"

     android:layout_marginTop="50dp"
     android:layout_marginLeft="100dp"/>

</RelativeLayout>