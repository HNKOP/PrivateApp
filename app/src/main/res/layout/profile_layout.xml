<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/status_cont"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/status_cont"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/relative_inventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff00"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/imageview_body"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:background="#ff0000"
                android:onClick="onItemInvClick"/>
            <ImageView
                android:id="@+id/imageview_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#ff0000"
                android:onClick="onItemInvClick"/>
            <ImageView
                android:id="@+id/imageview_righthand"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="10dp"
                android:background="#ff0000"
                android:onClick="onItemInvClick"/>
            <ImageView
                android:id="@+id/imageview_lefthand"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:background="#ff0000"
                android:onClick="onItemInvClick"/>
            <RelativeLayout
                android:id="@+id/description_cont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp">

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#cccccc">
            <TextView
                android:id="@+id/title2_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textSize="25sp"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/description_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#999999"
                android:layout_margin="20dp"
                android:layout_below="@id/title2_view" />
            <RelativeLayout
                android:id="@+id/location_cont"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>